<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--<android.support.v7.widget.CardView-->

        <!--android:id="@+id/cvLocation"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="120dp"-->
        <!--android:layout_margin="5dp"-->
        <!--card_view:cardCornerRadius="4dp"-->
        <!--android:orientation="vertical">-->

        <RelativeLayout
            android:id="@+id/rlNearLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue_2a4d7a">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/llDistance"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tvTitleLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="18sp"
                    android:gravity="start"
                    tools:text="Magazin Donaris" />

                <TextView
                    android:id="@+id/tvDetailsLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:textSize="16sp"
                    android:gravity="start"
                    tools:text="Bucuresti statia de metrou Aurel Vlaicu" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/llDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="20dp"
                android:layout_toLeftOf="@+id/ivArrow"
                android:background="@drawable/ico_destination_border"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tvDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/orange_fec033"
                    tools:text="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/orange_fec033"
                    android:text="km" />


            </LinearLayout>


            <ImageView
                android:id="@+id/ivArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ico_arrow_right" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/gray_665b5E" />

        </RelativeLayout>
    <!--</android.support.v7.widget.CardView>-->

</LinearLayout>